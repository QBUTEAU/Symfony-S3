{% extends 'base.html.twig' %}

{% block title %}Hello CategorieController!{% endblock %}

{% block body %}

<div class="example-wrapper">

<h1>{{ categorie.titre }}</h1>
    <p>Il y a {{ categorie.articles|length }} article(s)</p>

    {% for article in categorie.articles %}
        <h2>#{{ loop.index }} - {{ article.titre }}<br>
            ({{ article.categorie != null ? article.categorie.titre : 'Pas de cat√©gorie' }})</h2><br>
        <p>{{ article.texte }}</p>
        <i>{{ article.datePublication|date('d/m/Y H:i') }}</i>
        <p>{{ article.auteur }}</p>
    {% endfor %}

</div>
{% endblock %}
