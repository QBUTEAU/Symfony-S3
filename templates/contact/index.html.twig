{% extends 'base.html.twig' %}

{% block title %}Page Contact{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>PAGE DE CONTACT</h1>
    <h3>Vous pouvez nous contacter d√®s maintenant :</h3>
</div>
<div class="formulaire-contact">
    <form method="post" action="{{path('app_contact')}}">
        <div>
            <label for="sender">Email:</label>
            <input type="email" id="sender" name="sender" placeholder="johndoe@wanadoo.fr" required>

            <label for="sujet">Sujet:</label>
            <input type="text" id="subject" name="subject" placeholder="Demande de renseignement" required>
            
        </div>
        <div>
            <label for="message">Message:</label>
            <textarea id="message" name="message" placeholder="Votre message..." required></textarea>
            
            <button type="submit">Envoyer</button>
        </div>
    </form>
</div>
{% endblock %}
